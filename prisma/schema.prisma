model WorkExperience {
  id             String         @id @default(cuid())
  title          String
  description    String
  company        String
  location       String
  startDate      DateTime
  endDate        DateTime?
  isCurrent      Boolean        @default(false)
  link           String?
  employmentType EmploymentType
  workLocation   WorkLocation

  resumes Resume[]
}

enum EmploymentType {
  FREELANCER
  VOLUNTEER
  EMPLOYEE
}

enum WorkLocation {
  REMOTE
  ONSITE
  HYBRID
}

