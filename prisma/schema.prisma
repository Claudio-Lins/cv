generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  email        String
  firstName    String
  lastName     String
  profileImage String?

  createdAt DateTime @default(now())
  resume    Resume[]
}

model Resume {
  id         String    @id @default(cuid())
  title      String
  slug       String    @unique
  active     Boolean
  firstName  String
  lastName   String
  email      String
  phone      String
  birthday   DateTime?
  pictureUrl String?
  about      String
  street     String
  city       String
  state      String
  country    String
  zip        String
  createdAt  DateTime  @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  socialNetworks  SocialNetwork[]
  workExperiences WorkExperience[]
}

model SocialNetwork {
  id   String @id @default(cuid())
  name String
  url  String

  createdAt DateTime @default(now())

  resumes Resume[]
}

